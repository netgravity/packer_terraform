{
    "variables" : {
        "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
        "aws_secret_key" : "{{env `AWS_SECRET_KEY`}}"
    },
    "builders": [{
        "type":"amazon-ebs",
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "ami_name": "ubuntu-{{timestamp}}",
        "source_ami_filter": {
          "filters": {
            "virtualization-type": "hvm",
            "name": "ubuntu/images/hvm-ssd/ubuntu-focal-20.04-amd64-server-*",
            "root-device-type": "ebs"
          },
          "owners": ["099720109477"],
          "most_recent": true
        }
    }],
  "provisioners": [
    {
    "type": "shell",
    "script": "./packer/scripts/ansible.sh"
    },

    {
    "type": "ansible-local",
    "playbook_file": "./ansible/site.yml",
    "playbook_dir": "./ansible",
    "role_paths": [ 
      "./ansible/roles/vim",
      "./ansible/roles/git",
      "/home/sunny/.ansible/roles/geerlingguy.pip",
      "/home/sunny/.ansible/roles/geerlingguy.docker"
    ],
    "extra_arguments": [
      "--verbose"
    ],
    "group_vars": "./ansible/group_vars"
  },
  {
    "type": "file",
    "source": "test_infra.py",
    "destination": "/tmp/test_infra.py"
  },
  {
  "type": "shell",
  "inline": [
    "pytest -v /tmp/test_infra.py --junit-xml junit.xml"
  ]
  },
  {
    "type": "file",
    "source": "junit.xml",
    "destination": "junit.xml",
    "direction": "download"
  }],
  "post-processors": [{
    "type": "manifest",
    "output": "manifest.json",
    "strip_path": true
  }]
}
